{
  "name": "sassy-project",
  "version": "1.0.0",
  "scripts": {
    "dev:server": "live-server",
    "dev:sass": "node-sass source/scss/style.scss --watch --output=compiled/css --output-style=compressed --source-map=true",
    "dev": "run-p dev:*",
    "lint:html": "htmlhint index.html",
    "lint:sass": "stylelint \"source/scss/*.scss\"",
    "lint:test": "standard clicky.js",
    "lint:node": "node-sass source/scss/style.scss --output=compiled/css --output-style=compressed --source-map=true",
    "build": "run-s lint:*",
    "deploy": "surge --project . --domain https://storingo-kg-tgc7noax99ajvzzg.surge.sh/"
  },
  "devDependencies": {
    "htmlhint": "^0.9.13",
    "live-server": "^1.2.0",
    "node-sass": "^4.5.2",
    "npm-run-all": "^4.0.2",
    "standard": "^9.0.2",
    "stylelint": "^7.10.1",
    "stylelint-config-standard": "^16.0.0",
    "surge": "^0.19.0"
  },
  "stylelint": {
    "extends": "stylelint-config-standard"
  }
}
